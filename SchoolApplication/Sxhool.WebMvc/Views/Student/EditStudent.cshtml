@model School.Repository.View.StudentDtoPost
@{
    ViewBag.Title = "EditStudent";
    var check = false;
}

<h2>EditStudent</h2>


<form action="@Url.Action("EditStudent","Student")" onsubmit="return validate()">
    <div class="row" id="parent" name="myForm" >

        <input id="id" type="hidden"  value="@Model.student.Id"    />

        <div class="col-md-6">

            <div class="form-group ">
                <label><b>Name</b></label>
                <input id="Name" type="text" name="Name" value="@Model.student.Name" class="form-control" />
                <label id="Namelb"></label>
            </div>

            <div class="form-group">

                <label><b>Father Name</b></label>

                <input id="FName" type="text" name="FName" value="@Model.student.FName" class="form-control" />
                <label id="FNamelb"></label>
            </div>

            <div class="form-group">

                <label><b>Email</b></label>

                <input id="email" type="text" name="Email" value="@Model.student.Email" class="form-control" />
                <label id="emaillb"></label>
            </div>
            <div class="form-group">
                <label><b>Date of Birth</b></label>
                <input id="DOB" type="date"  name="Dob" value="@Model.student.Dob" class="form-control" />

            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">

                <label><b>Course</b></label>
                <select id="courseslct" class="form-control select22" name="Courses" multiple searchable="Search here..">
                    @foreach (var course in Model.AllCoursesList)
                    {

                        foreach (var stdcourse in Model.StudentCourses)
                        {
                            if (stdcourse.CourseId == course.CourseId)
                            {
                                <option value="@course.CourseId" class="select2" selected=true>@course.Name</option>
                                check = true;
                            }
                        }
                        if (!check)
                        {
                            <option value="@course.CourseId" class="select2">@course.Name</option>
                        }
                        check = false;
                    }
                </select>


            </div>
            <div class="form-group">

                <label><b>Phone</b></label>
                <input id="phone" type="text" name="Phone" value="@Model.student.Phone" class="form-control" />
                <label id="phonelb"></label>
            </div>

            <div class="form-group">
                <label><b>Password</b></label>

                <input id="Password" type="password" name="Password" value="@Model.student.Password" class="form-control" />
                <label id="Passwordlb"></label>

            </div>
            <div class="form-group">


                <label><b>Confrim Password</b></label>

                <input id="ConfrimPassword" type="password" name="ConfirmPassword" value="@Model.student.ConfirmPassword" class="form-control" />
                <label id="ConfrimPasswordlb"></label>

            </div>
            <div class="form-group">

                <button type="button" id="saveBtn" class="form-control btn btn-primary " >Save</button>
                <a href="@Url.Action("Index","Student")" type="button" class="btn ">Back to List</a>

            </div>
        </div>

    </div>


</form>
<script>
    $(document).ready(function(){
        $('#courseslct').select2();
        function validate() {
            debugger;
            var x = validateStudentForm(GetStudentToValidate(), $('#parent')) ? true : false;
            return x;
    }
   

});
</script>
